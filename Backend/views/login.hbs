<div class="login-container">
            <div class="login-box">
                <h1>Bienvenido</h1>
                <p>Inicia sesión en FIT AI</p>
                
                <form class="login-form">
                    <div class="form-group">
                        <label for="email">Correo Electrónico</label>
                        <input type="email" id="email" name="email" placeholder="tu@email.com" required>
                    </div>

                    <div class="form-group">
                        <label for="password">Contraseña</label>
                        <input type="password" id="password" name="password" placeholder="••••••••" required>
                    </div>

                    <div class="form-options">
                        <!--<label class="remember-me">
                            <input type="checkbox" name="remember">
                            Recuérdame
                        </label>-->
                        <a href="/recovery" class="forgot-password">¿Olvidaste la contraseña?</a>
                    </div>

                    <button type="submit" class="btn-login-submit">Iniciar Sesión</button>
                </form>

                <div class="login-footer">
                    <p>¿No tienes cuenta? <a href="/register">Regístrate aquí</a></p>
                </div>
            </div>
        </div>

<!-- SweetAlert2 (CDN) + helper Toast -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    if (window.Swal) {
        const Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true
        });
        window.SwalToast = Toast;
    }
</script>

<script src="/js/login.js" defer></script>
